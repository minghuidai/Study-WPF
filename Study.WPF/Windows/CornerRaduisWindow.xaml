<ctl:DialogShell x:Class="Study.WPF.Windows.CornerRaduisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:ctl="clr-namespace:Study.WPF.Controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="dsfads"
        Height="300" Width="300">

    <!--WindowStyle="None" Background="Transparent" BorderThickness="1" BorderBrush="Transparent" AllowsTransparency="False"-->
    <Border Margin="2" BorderBrush="#dddddd" BorderThickness="1" CornerRadius="4" Background="#eeeeee" >
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0.5" Direction="-90" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <DockPanel Background="{StaticResource TitleBackground}">
                <Label Style="{StaticResource TitleLabelStyle}">Window Title here:</Label>
            </DockPanel>

            <!--<Button Click="Button_Click" Width="60" Grid.Row="1" Height="23" >Close</Button>-->
        </Grid>
    </Border>
</ctl:DialogShell>
