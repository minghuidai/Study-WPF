               Center="47.6424,-122.3219" ZoomLevel="8" Grid.Row="1" Grid.RowSpan="4"
               MouseDoubleClick="MapWithPushpins_MouseDoubleClick" MouseDown="myMap_MouseDown"
               Heading="0" Mode="Road">
